    android:layout_height="match_parent"
    android:duplicateParentState="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defualt_spacing"
        android:background="@android:color/transparent"
        android:duplicateParentState="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="all">

        <ImageView
            android:id="@+id/cl_menu"
            android:layout_width="@dimen/filter_height"
            android:layout_height="@dimen/filter_height"
            android:layout_marginLeft="5dp"
            android:duplicateParentState="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ico" />

        <TextView
            android:id="@id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defualt_spacing"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/cl_title_size" />

        <ImageView
            android:id="@+id/cl_option_menu"
            android:layout_width="@dimen/defualt_spacing"
            android:layout_height="@dimen/defualt_spacing"
            android:layout_gravity="right"
            android:layout_marginRight="50dp"

            android:layout_marginTop="15dp"
            android:duplicateParentState="true"
            android:scaleType="fitCenter"
            android:src="@drawable/amlak" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/defualt_msize"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="-3dp"
        android:layout_marginRight="-5dp"
        android:background="@drawable/my_footer"
        android:orientation="horizontal"
        android:scaleType="fitCenter">


        <ImageButton
            android:id="@+id/btn_profile"
            style="@style/my_home_main_menu"
            app:srcCompat="@drawable/kelid_home" />

        <ImageButton
            android:id="@+id/btn_group"
            style="@style/my_home_main_menu"
            app:srcCompat="@drawable/kelid_home" />

        <ImageButton
            style="@style/my_home_main_menu"
            android:visibility="invisible"
            app:srcCompat="@drawable/kelid_home" />

        <ImageButton
            android:id="@+id/btn_search"
            style="@style/my_home_main_menu"
            app:srcCompat="@drawable/kelid_home" />

        <ImageButton
            android:id="@+id/btn_home"
            style="@style/my_home_main_menu"
            app:srcCompat="@drawable/kelid_home" />
    </LinearLayout>


