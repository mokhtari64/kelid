<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:duplicateParentState="true"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defualt_spacing"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:duplicateParentState="true"
        tools:ignore="all">

        <ImageView
            android:duplicateParentState="true"
            android:id="@+id/cl_menu"
            android:layout_width="@dimen/filter_height"
            android:layout_height="@dimen/filter_height"
            android:scaleType="fitCenter"
            android:src="@drawable/ico"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:duplicateParentState="true"
            android:id="@id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defualt_spacing"
            android:layout_weight="1"
            android:textColor="@android:color/primary_text_light"
            android:textSize="@dimen/cl_title_size" />

        <ImageView
            android:duplicateParentState="true"
            android:id="@+id/cl_option_menu"
            android:layout_width="@dimen/defualt_spacing"
            android:layout_height="@dimen/defualt_spacing"
            android:layout_gravity="right"

            android:scaleType="fitCenter"
            android:src="@drawable/amlak"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp" />


    </LinearLayout>

    <ImageView
        android:duplicateParentState="false"
        android:layout_width="match_parent"
        android:layout_height="@dimen/defualt_spacing2x"
        android:src="@drawable/my_footer"
        android:layout_alignParentRight="false"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="-20dp" />

    <ImageView
        android:layout_width="@dimen/defualt_spacing2x"
        android:layout_height="@dimen/defualt_spacing2x"
        android:src="@drawable/my_footer"
        android:layout_alignTop="@+id/arcMenu"
        android:layout_alignLeft="@+id/arcMenu"
        android:layout_alignRight="@+id/arcMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.sa90.materialarcmenu.ArcMenu
        android:id="@+id/arcMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:menu_color="@color/colorPrimaryDark"
        app:menu_radius="140dp"
        app:menu_ripple_color="@android:color/holo_blue_bright"
        app:menu_scr="@android:drawable/ic_dialog_dialer"
        app:menu_open="arc_left"
        android:layout_alignParentLeft="false"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_alignWithParentIfMissing="false"
        android:duplicateParentState="true">

        <!--<ImageButton-->
            <!--android:id="@+id/news"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:src="@drawable/preview"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:layout_height="wrap_content" />-->




        <ImageButton

            android:id="@+id/office"
            android:layout_width="wrap_content"
            android:src="@drawable/add_text"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" />


        <ImageButton
            android:id="@+id/consulting"
            android:layout_width="wrap_content"
            android:src="@drawable/qr"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:src="@drawable/add_image"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/property"
            android:layout_width="wrap_content"
            android:src="@drawable/bg"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" />

    </com.sa90.materialarcmenu.ArcMenu>

    <LinearLayout
        android:duplicateParentState="true"
        android:id="@+id/setting_layer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/my_transparent"
        android:orientation="horizontal">

        <RelativeLayout
            android:duplicateParentState="true"
            android:id="@+id/menu_space"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

        <LinearLayout

            android:layout_width="@dimen/defualt_spacing3x"
            android:layout_height="match_parent"
            android:background="@color/login_black"
            android:orientation="vertical"
            android:paddingTop="@dimen/defualt_spacing" >

            <RelativeLayout
                android:id="@+id/edit_device"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defualt_spacing"
                android:background="@color/line1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextMenu"
                    android:background="@drawable/user_shape"
                    android:text="@string/edit_node"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_zone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defualt_spacing"
                android:background="@color/line2"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextMenu"
                    android:background="@drawable/user_shape"
                    android:text="@string/edit_zone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_senario"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defualt_spacing"
                android:background="@color/line4"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextMenu"
                    android:background="@drawable/user_shape"
                    android:text="@string/edit_senario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/edit_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defualt_spacing"
                android:background="@color/line5"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextMenu"
                    android:background="@drawable/user_shape"
                    android:text="@string/edit_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rules"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defualt_spacing"
                android:background="@color/line7"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextMenu"
                    android:background="@drawable/user_shape"
                    android:text="@string/rules"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/about_me"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defualt_spacing"
                android:background="@color/line10"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextMenu"
                    android:background="@drawable/user_shape"
                    android:text="@string/about_me"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/defualt_spacing"
                android:background="@color/line11"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextMenu"
                    android:background="@drawable/user_shape"
                    android:text="@string/exit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/defualt_spacing"
        android:layout_height="@dimen/defualt_spacing"
        android:layout_gravity="right"
        android:layout_alignParentRight="true">

        <ImageView
            app:srcCompat="@drawable/setting_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin" />

        <ToggleButton
            android:id="@+id/setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/mdtp_date_picker_header_height"
            android:layout_marginLeft="@dimen/mdtp_date_picker_header_height"
            android:background="@drawable/setting"
            android:src="@drawable/setting"
            android:textOff=""
            android:textOn=""
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="false" />
    </RelativeLayout>

</RelativeLayout>