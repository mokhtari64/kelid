<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activation_code"
        android:id="@+id/textView10"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />
    <ir.mehdi.kelid.ui.DotsProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dotprogress"
        android:layout_gravity="right" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:id="@+id/timer"-->
        <!--android:layout_gravity="right" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/activation"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <requestFocus />
    </EditText>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/send_activation"
        android:id="@+id/send"
        style="@style/button"
        android:gravity="center"
        android:layout_margin="8dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/change_phone"
            android:id="@+id/change_phone"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#000000" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/resend"
            android:id="@+id/resend"
            android:layout_weight="1"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>